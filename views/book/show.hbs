<p class="card">
  {{> 'book'}}
</p>

{{#if book.notes}}
  {{#each book.notes}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          {{ content }}
        </span>
      </div>
      <div class="card-action">
        <a href="/user/{{ author._id }}" class="">{{ author.local.email }}</a>
        <span class="tweet__date">{{ createdAt }}</span>
      </div>
    </div>
  {{/each}}
{{/if}}
{{#if currentUser}}
<div class="card">
  <div class="card-content">
    <h4 class="card-title">Add a note:</h6>
    <form method="POST" action="/book/{{book._id}}?_method=POST" class="row">
      <p class="input-field inline col s10">
        <label for="content"></label>
        <input type="text" name="content" id="">
      </p>
      <p class="input-field inline col s2">
        <input class="btn" type="submit" value="Submit">
      </p>
    </form>
  </div>
</div>
{{/if }}

