<div class="card">
  <div class="card-content">
    <a class="card-title" href="/book/{{book._id}}">
      <p>{{ book.title }} by {{ book.author}}</p><br>
      {{ book.description }}<br>
    </a>
  </div>
   <div class="card-action">
      <a href="{{ book.amazon_product_url }}" class="">Buy it</a>
  </div> 
  {{#each book.notes}}
  <div class="card-action">
    <span class="tweet_comments">{{ book.notes.content }} </span>
  </div>
  {{/each}}
  {{#if currentUser}}
  {{#if check}}
  {{else}}
    <div class="card-action">
      <form method="POST" action="/user/{{currentUser._id}}?_method=PUT" class="row">
        <input type="hidden" name="bookId" value="{{book._id}}">
        <p class="input-field inline col s2">
          <input class="btn" type="submit" value="Save to My Books">
        </p>
      </form>
    </div>
    {{/if}}
  {{/if}}
  </div>
