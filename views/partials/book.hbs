<div class="card">
  <div class="card-content">
    <a class="card-title" href="/book/{{book._id}}">
      {{ book.title }}<br>
      {{ book.description }}<br>
    </a>
  </div>
  <div class="card-action">
    <a href="" class="">{{ book.author}}</a>
    {{#each book.notes}}
    <span class="tweet_comments">{{ book.notes.content }} </span>
    {{/each}}
  </div>
  <div class="card-action">
    <label>
        <input id="indeterminate-checkbox" type="checkbox" />
        <span>My Books</span>
      </label>
  </div>
  </div>
